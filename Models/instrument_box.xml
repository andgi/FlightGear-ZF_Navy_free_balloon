<PropertyList>

 <path>instrument_box.ac</path>

 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.0 </x-m>
  <y-m> 0.0 </y-m>
  <z-m> 0.0 </z-m>
 </offsets>

 <!-- 3d instruments -->

 <model>
  <name>Clock</name>
  <path>Aircraft/ZF_Navy_free_balloon/Models/clock.xml</path>
  <offsets>
   <heading-deg>90</heading-deg>
   <x-m>  0.100 </x-m>
   <y-m>  0.051 </y-m>
   <z-m>  0.050 </z-m>
  </offsets>
 </model>

 <model>
  <name>Altimeter</name>
  <path>Aircraft/Short_Empire/Instruments/Altimeter/altimeter.xml</path>
  <offsets>
   <heading-deg>90</heading-deg>
   <x-m> -0.100 </x-m>
   <y-m>  0.051 </y-m>
   <z-m>  0.050 </z-m>
  </offsets>
 </model>

 <model>
  <name>Vertical Speed Indicator</name>
  <path>Aircraft/Short_Empire/Instruments/VerticalSpeedIndicator/vsi.xml</path>
  <offsets>
   <heading-deg>90</heading-deg>
   <x-m>  0.000 </x-m>
   <y-m>  0.051 </y-m>
   <z-m>  0.050 </z-m>
  </offsets>
 </model>

 <model>
  <name>OAT and Superheat Indicator</name>
  <path>Aircraft/ZLT-NT/Models/Instruments/Thermometer/thermometer.xml</path>
  <offsets>
   <heading-deg>90</heading-deg>
   <x-m>  0.100 </x-m>
   <y-m>  0.051 </y-m>
   <z-m> -0.020 </z-m>
  </offsets>
 </model>

 <!-- LOD for the model as a whole -->
